<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>List Ateliers</title>
    <link rel="shortcut icon" href="img/logo.png" type="image/png">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
</head>
<body>
<% include partials/header.ejs%>
<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Cuisinier</th>
        <th scope="col">Atelier</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% atelier.forEach(function (element) { %>
    <tr>
        <td>
        <% element.id_cuisinier.forEach(function (element) { %>
            <p class="text-uppercase"><%= element.nom %> <%= element.prenom %></p>
        <% }) %>
        </td>
        <td>
            <% element.id_atelier.forEach(function (element) { %>
                <p><%= element.titre %></p>
            <% }) %>
        </td>
        <td>
            <% element.id_atelier.forEach(function (atelier) { %>
            <a href="/admin/deleteAtelier/<%= atelier._id %>" data-id="<%= element._id %>" class="btn btn-danger mt-3 delAffect">Supprimer</a>
            <% }) %>
        </td>
    </tr>
    <% }) %>
    </tbody>
</table>
<% include partials/footer.ejs %>
</body>
</html>